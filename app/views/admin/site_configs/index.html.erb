<% content_for :sitemap do %>
  <span class="current"><%= t("admin.site_configs.settings") %></span>
<% end %>

<h1><%= t("admin.site_configs.settings") %></h1>

<table class="table table-bordered table-striped table-condensed">
  <tr>
    <th>Var</th>
    <th>说明</th>
    <th></th>
  </tr>

  <% @site_configs.each do |site_config| %>
    <tr>
      <td><%= site_config.key %></td>
      <td><%= t("site_config.#{site_config.key}") %></td>
      <td class="opts"><%= link_to icon_tag("fa fa-pencil"), edit_admin_site_config_path(site_config) %></td>
    </tr>
  <% end %>
</table>
